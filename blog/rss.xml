---
layout: null
---
<?xml version="1.0"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Блог Александра Зайцева</title>
    <link>http://nqst.net/blog/</link>
    <atom:link href="http://nqst.net/blog/rss.xml" rel="self" type="application/rss+xml" />
    <description></description>
    <language>ru</language>
    <pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {% for post in site.posts %}
    <item>
      <title>{{ post.title }}</title>
      <link>http://nqst.net{{ post.url }}</link>
      <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
      <guid>http://nqst.net{{ post.id }}</guid>
      <description>
        {% capture imgtag %}
          <figure>
            <img src="/i{{ post.url }}/{{ post.introimg }}" width="650" alt="{% if post.alt %}{{ post.alt }}{% else %}{{ post.title }}{% endif %}" />
          </figure>
        {% endcapture %}
        {% if post.introimg %}
          {{ imgtag | xml_escape }}
        {% endif %}
        {{ post.content | xml_escape }}
        {% if post.layout == 'quote' %}
          {% if post.author %}
            — {{ post.author }}
          {% endif %}
        {% endif %}
      </description>
    </item>
    {% endfor %}

  </channel> 
</rss>
